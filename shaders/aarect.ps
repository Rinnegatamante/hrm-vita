// profile sce_fp_psp2

#ifdef GLES
#endif

// in

uniform float4 sParams;

void main(
	float4 v_color : COLOR,
	float2 v_texCoord0: TEXCOORD0,
	float4 out gl_FragColor : COLOR
) {
	float4 finalColor;

	float xa = smoothstep( 0.5 + sParams.x, 0.5 - sParams.x, abs(v_texCoord0.x - 0.5) );
	float ya = smoothstep( 0.5 + sParams.y, 0.5 - sParams.y, abs(v_texCoord0.y - 0.5) );
	float a = xa * ya;

    finalColor = v_color * a;

    gl_FragColor = finalColor;
}
